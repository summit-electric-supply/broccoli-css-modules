{
  "name": "@summit-electric-supply/broccoli-css-modules",
  "version": "0.0.0",
  "description": "A broccoli plugin for compiling CSS modules",
  "main": "index.js",
  "scripts": {
    "test": "eslint *.js lib/*.js && mocha",
    "test-win": "mocha"
  },
  "keywords": [
    "broccoli-plugin",
    "css-modules"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/salsify/broccoli-css-modules.git"
  },
  "engines": {
    "node": ">= 10"
  },
  "author": "Dan Freeman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/salsify/broccoli-css-modules/issues"
  },
  "homepage": "https://github.com/salsify/broccoli-css-modules#readme",
  "dependencies": {
    "broccoli-caching-writer": "^3.0.3",
    "ensure-posix-path": "^1.1.1",
    "icss-replace-symbols": "^1.1.0",
    "mkdirp": "^1.0.4",
    "postcss-modules-extract-imports": "^3.0.0",
    "postcss-modules-local-by-default": "^4.0.0",
    "postcss-modules-scope": "^3.0.0",
    "postcss-modules-values": "^4.0.0",
    "rsvp": "^4.8.5",
    "symlink-or-copy": "^1.3.1"
  },
  "devDependencies": {
    "broccoli": "^3.5.0",
    "broccoli-fixture": "^1.0.0",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.19.0",
    "fs-extra": "^9.1.0",
    "mocha": "^8.2.1",
    "postcss": "^8.2.6",
    "postcss-scss": "^3.0.4",
    "sinon": "^9.2.4"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "volta": {
    "node": "14.15.5",
    "yarn": "1.22.10"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --template https://gist.githubusercontent.com/atsjj/de6998d6750a8b32778fa3380da24301/raw/66a23990c3324f03aa756e45fed70d46389c7eab/compact.hbs",
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "requireCommits": false,
      "addUntrackedFiles": false,
      "commit": true,
      "commitMessage": "${version}",
      "commitArgs": "--gpg-sign",
      "tag": true,
      "tagName": "${version}",
      "tagAnnotation": "${version}",
      "tagArgs": "--sign",
      "push": true,
      "pushArgs": "--follow-tags",
      "pushRepo": "origin"
    },
    "npm": {
      "publish": true
    }
  }
}
